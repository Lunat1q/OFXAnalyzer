<UserControl x:Class="OFXAnalyzer.Controls.AutoUIControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OFXAnalyzer.Controls"
             mc:Ignorable="d" 
             Width="Auto"
             Height="Auto"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Converter={StaticResource DisplayNameFromClassConverter}}"/>
        <Grid Grid.Row="1" Name="ContentControl" Width="Auto" Height="Auto">

        </Grid>
    </Grid>
</UserControl>
